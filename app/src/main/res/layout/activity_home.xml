<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/system_accent2_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title: Shop Eco-Friendly -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:text="Shop Eco-Friendly"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Subtopic 1: Handmade Crafts and Souvenirs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subtopic1Image"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subtopic1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="1. Handmade Crafts and Souvenirs"
                        android:textColor="@color/material_dynamic_primary90"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtopic1Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="Beautiful handmade crafts and souvenirs made from sustainable materials such as coconut shells and wood."
                        android:textColor="@android:color/system_accent2_200"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtopic1Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Range: $10 - $50"
                        android:textColor="@android:color/system_neutral1_400"
                        android:textSize="14sp"
                        android:textStyle="bold|italic" />
                </LinearLayout>
            </LinearLayout>

            <!-- Subtopic 2: Zero-Waste Lifestyle Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subtopic2Image"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subtopic2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="2. Zero-Waste Lifestyle Items"
                        android:textColor="@color/material_dynamic_primary90"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtopic2Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="Switch to reusable bags, bottles, and cups made from natural materials."
                        android:textColor="@android:color/system_accent2_200"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtopic2Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Range: $5 - $30"
                        android:textColor="@android:color/system_neutral1_400"
                        android:textSize="14sp"
                        android:textStyle="bold|italic" />
                </LinearLayout>
            </LinearLayout>

            <!-- Subtopic 3: Natural Jewelry -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subtopic3Image"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subtopic3Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="3. Natural Jewelry"
                        android:textColor="@color/material_dynamic_primary90"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtopic3Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="Unique bracelets, necklaces, and earrings made from natural materials like seeds, shells, and stones."
                        android:textColor="@android:color/system_accent2_200"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtopic3Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Range: $15 - $75"
                        android:textColor="@android:color/system_neutral1_400"
                        android:textSize="14sp"
                        android:textStyle="bold|italic" />
                </LinearLayout>
            </LinearLayout>

            <!-- Subtopic 4: Organic Products -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subtopic4Image"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subtopic4Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="4. Organic Products"
                        android:textColor="@color/material_dynamic_primary90"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtopic4Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="Organic products like Ceylon tea, cinnamon, cardamom, and natural skincare items."
                        android:textColor="@android:color/system_accent2_200"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtopic4Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Range: $8 - $60"
                        android:textColor="@android:color/system_neutral1_400"
                        android:textSize="14sp"
                        android:textStyle="bold|italic" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/InfoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/system_surface_container_dark"
                android:text="Why You Should Choose Eco-Friendly Shopping?"
                android:textColor="@color/design_default_color_surface"
                android:textStyle="bold" />

            <!-- Contact Information -->
            <LinearLayout
                android:layout_width="378dp"
                android:layout_height="117dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contactTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="2dp"
                    android:text="Contact Us"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="Phone: 0703655284"
                    android:textColor="@android:color/system_secondary_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contactEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="Email: senevirathnepabasaraa@gmail.com"
                    android:textColor="@android:color/system_secondary_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contactLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: 56th Mail Post, Mihinthale"
                    android:textColor="@android:color/system_secondary_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Quize Button -->

            <TextView
                android:id="@+id/textView5"
                android:layout_width="295dp"
                android:layout_height="24dp"
                android:text="Do you like improve your knowladge with us ?"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/Game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/system_surface_container_dark"
                android:text="Attempt quiz"
                android:textColor="@color/design_default_color_surface"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
